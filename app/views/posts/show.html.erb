<div class="container mt-4">
  <p class="text-success"><%= notice %></p>

  <%= render @post %>

  <div class="mt-3">
    <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-secondary me-2" %>
    <%= link_to "Back to posts", posts_path, class: "btn btn-secondary me-2" %>
    <%= button_to "Destroy this post", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", form: { class: "d-inline" } %>
  </div>
</div>
